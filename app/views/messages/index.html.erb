<section class="message_main">
  <div class="header">
    <div class="container">
      <%= image_tag("message.svg", :alt => "message icon") %>
      <h1>Messenger</h1>
    </div>
  </div>
  
  <div class="messages">
    <div class="container">
      <h2 class="message_heading">Feel your Besties Heatbeat!</h2>
    	<% @messages.each do |message| %> 
  			<div class="message"> 
    			<p class="content"><%= message.content %></p> 
    			<p class="time"><%= message.created_at %></p> 
  			</div> 
  		<% end %>
  		<%= link_to 'New Message', "messages/new" %>
    </div>
  </div>
</section>